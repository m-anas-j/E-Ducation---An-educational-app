<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="education.ChangeInstituteController">
    <children>
      <ImageView fitHeight="411.0" fitWidth="600.0" layoutY="-11.0">
         <image>
            <Image url="@Assets/signup.png" />
         </image>
      </ImageView>
        <TextField fx:id="instituteTextField" layoutX="154.0" layoutY="164.0" prefHeight="55.0" prefWidth="290.0" styleClass="label" stylesheets="@LabelHighlight.css">
            <font>
                <Font name="Comic Sans MS" size="17.0" />
            </font></TextField>
        <PasswordField fx:id="passwordField" layoutX="154.0" layoutY="243.0" prefHeight="55.0" prefWidth="290.0" styleClass="label" stylesheets="@LabelHighlight.css">
            <font>
                <Font size="17.0" />
            </font></PasswordField>
        <Label layoutX="27.0" layoutY="166.0" prefHeight="55.0" prefWidth="127.0" text="New institute:">
            <font>
                <Font name="Comic Sans MS" size="17.0" />
            </font>
        </Label>
        <Label layoutX="27.0" layoutY="243.0" prefHeight="55.0" prefWidth="127.0" text="Password:">
            <font>
                <Font name="Comic Sans MS" size="17.0" />
            </font>
        </Label>
        <Button fx:id="submitButton" layoutX="243.0" layoutY="307.0" mnemonicParsing="false" onAction="#submitButtonPressed" prefHeight="55.0" prefWidth="113.0" stylesheets="@Red%20Button%20Highlight.css" text="Submit" textFill="WHITE">
            <font>
                <Font name="Comic Sans MS" size="19.0" />
            </font>
        </Button>
        <Label layoutX="155.0" layoutY="29.0" prefHeight="55.0" prefWidth="290.0" text="Change institute">
            <font>
                <Font name="Comic Sans MS" size="36.0" />
            </font>
        </Label>
        <Label fx:id="wrongPassword" layoutX="456.0" layoutY="271.0" prefHeight="55.0" prefWidth="127.0" text="Wrong password!" textFill="RED" visible="false">
            <font>
                <Font name="Comic Sans MS" size="16.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
